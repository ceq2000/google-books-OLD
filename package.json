{
  "name": "Google-Book-Search",
  "version": "1.0.0",
  "description": "A React-based Google Books Search app. Create React components, work with helper/util functions, and utilize React lifecycle methods to query and display books based on user searches. Use Node, Express and MongoDB so that users can save books to review or purchase later.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Davidlevens/Google-Book-Search.git"
  },
  "keywords": [],
  "author": "David Levens",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Davidlevens/Google-Book-Search/issues"
  },
  "homepage": "https://github.com/Davidlevens/Google-Book-Search#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "@sentry/browser": "^4.5.2",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.8.6"
  }
}
